<configuration>
  <system.web>
    <compilation targetFramework="4.5" />
  </system.web>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="LotOfObjectsBehavior">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
          <dataContractSerializer maxItemsInObjectGraph="2147483647" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <bindings>
      <basicHttpBinding>
        <binding name="HttpBigMessage" receiveTimeout="00:10:00" sendTimeout="00:10:00" maxReceivedMessageSize="1000000" maxBufferSize="1000000" maxBufferPoolSize="1000000">
          <security mode="None" />
        </binding>
      </basicHttpBinding>
    </bindings>
    <services>
      <service name="Nop.Plugin.Sitecore.Commerce.Payments.PaymentService" behaviorConfiguration="LotOfObjectsBehavior">
        <endpoint address="" binding="basicHttpBinding" bindingConfiguration="HttpBigMessage" contract="Nop.Plugin.Sitecore.Commerce.Payments.IPaymentService" />
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
      </service>
    </services>
  </system.serviceModel>
</configuration>
