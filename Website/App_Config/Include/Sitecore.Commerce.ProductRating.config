<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <!--  Commerce ENTITIES
          Contains all the Commerce product rating entities.
          The configuration can be used to substitute the default entity implementation with extended one.
    -->
    <commerce.Entities>
      <ProductRating type="Sitecore.Commerce.Entities.ProductRatings.ProductRating, Sitecore.Commerce"/>
    </commerce.Entities>

    <!-- PRODUCT RATING SERVICE PROVIDER 
         Defines the object which provides core product rating services.
         Default implementation simply calls corresponding pipelines.
    -->
    <productRatingsServiceProvider type="Sitecore.Commerce.Services.ProductRatings.ProductRatingsServiceProvider, Sitecore.Commerce" singleInstance="true" />

    <pipelines>
      <commerce.productRatings.getProductRatings>
      </commerce.productRatings.getProductRatings>
    </pipelines>

  </sitecore>
</configuration>