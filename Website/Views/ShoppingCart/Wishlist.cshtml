@using System.Globalization
@using System.Web.Optimization
@using Sitecore.Commerce.StarterKit
<div class="wrap-content-checkout" id="wishlistContainer">
    <h3 data-bind="visible: cartLines().length == 0" style="display: none;">No products in wishlist.</h3>
    <div class="col-md-12" id="cartSection" data-bind="visible: cartLines().length > 0" style="display: none;">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr class="cart-header">
                        <th class="del-row">@Texts.Remove</th>
                        <th>@Texts.AddToCart</th>
                        <th class="hidden-sm hidden-xs">&nbsp;</th>
                        <th>Product details</th>
                        <th>Unit price</th>
                        <th>Quantity</th>
                        <th class="text-right">Total</th>
                    </tr>
                </thead>

                <tbody data-bind="template: {foreach: cartLines, beforeRemove: hideLineElement, afterRender: slideLineDown}">
                    <tr style="display:none">
                        <td class="cart-delete"><a pid="remove" class="delete-item" data-bind="click: removeLine" href="#"><span class="glyphicon glyphicon-remove-circle"></span></a></td>
                        <td class="cart-addtocart"><a class="addtocart-item" data-bind="click: addLineToCart" href="#"><span class="glyphicon glyphicon-share-alt"></span></a></td>
                        <td class="cart-image hidden-sm hidden-xs" pid="image">
                            <a data-bind="attr:{'href' : productUrl}"><img class="img-responsive" data-bind="attr: {src: image}" alt="a" /></a>
                        </td>

                        <td class="cart-info">
                            <a data-bind="attr:{'href' : productUrl}"><h5 pid="displayName" data-bind="text: productName"></h5></a>
                            <span class="cart-variable"></span>
                            <span pid="color"></span>
                        </td>

                        <td class="cart-price">
                            <dl>
                                <dt>
                                    <span pid="price" data-bind="text: unitPrice"></span>
                                </dt>
                                @*<dt data-bind="visible: shouldShowDiscountOffers">
                        <span>@discountLabel</span>
                        <span pid="discountLabel" data-bind="text: discountOfferNames"></span>
                    </dt>*@
                            </dl>
                        </td>
                        <td class="cart-quantity text-center" style="width: 10%;">
                            <input pid="quantity" type="number" class="form-control form-control-quantity" min="1" max="100" placeholder="1" data-bind="value: quantity">
                        </td>
                        <td class="cart-total">
                            <dl>
                                <dt>
                                    <span pid="total" data-bind="text: totalLineSum"></span>
                                </dt>
                            </dl>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- curt summery-->
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6 chk-prev"><a class="btn btn-info" href="/Products">Back to shopping</a></div>
        </div>
    </div>
</div>

@*@Scripts.Render("~/bundles/obec/cart")*@
@Scripts.Render("~/Scripts/StarterKit/wishlist.js")