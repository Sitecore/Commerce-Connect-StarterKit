@using Sitecore.Data.Items
@model Sitecore.Mvc.Presentation.RenderingModel

@if (Model != null && Model.Item != null && Model.Item.HasChildren)
{
    <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand hidden-lg" href="#">Your Store Name</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @{
                    var currentCategoryId = Request.QueryString["category"] ?? string.Empty;
                    
                    foreach (Item category in Model.Item.Children)
                    {
                      <li class="@(currentCategoryId.Equals(category["ExternalID"]) ? "selected" : "")">
                          <a href="/products?category=@category["ExternalID"]">@category.DisplayName</a>
                      </li>
                    }
                }
            </ul>
        </div>
        <div>
        </div>
    </div>
}