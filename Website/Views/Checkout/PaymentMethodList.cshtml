@using Sitecore.Commerce.StarterKit.Models
@model IEnumerable<PaymentMethodModel>


@foreach (var paymentMethod in Model)
{
    string radioId = Guid.NewGuid().ToString("N");
    <div class="row">
        <div class="col-md-3">
            <input type="radio" @(paymentMethod.Selected ? "checked=checked" : string.Empty) name="paymentMethod" id="@radioId" value="@(paymentMethod.SystemName + "|" + paymentMethod.Name)" />
            <label for="@radioId">@paymentMethod.Name</label>
        </div>
    </div>
}
