@using System.Globalization
@using System.Web.Optimization
<div class="wrap-content-checkout" id="itemsContainer">
    <div class="col-md-12" id="cartSection" data-bind="visible: cartLines().length > 0" style="display: none;">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr class="cart-header">
                        <th class="hidden-sm hidden-xs">&nbsp;</th>
                        <th>Product details</th>
                        <th>Unit price</th>
                        <th>Quantity</th>
                        <th class="text-right">Total</th>
                    </tr>
                </thead>

                <tbody data-bind="foreach: cartLines">
                    <tr>
                        <td class="cart-image hidden-sm hidden-xs" pid="image">
                            <a data-bind="attr:{'href' : productUrl}"><img class="img-responsive" data-bind="attr: {src: image}" alt="a"  width ="100"/></a>
                        </td>

                        <td class="cart-info">
                            <a data-bind="attr:{'href' : productUrl}"><h5 pid="displayName" data-bind="text: productName"></h5></a>
                            <span class="cart-variable"></span>
                            <span pid="color"></span>
                        </td>

                        <td class="cart-price">
                            <dl>
                                <dt>
                                    <span pid="price" data-bind="text: unitPrice"></span>
                                </dt>
                            </dl>
                        </td>
                        <td class="cart-quantity text-center" style="width: 10%;">
                            <span data-bind="text: quantity"></span>
                        </td>
                        <td class="cart-total">
                            <dl>
                                <dt>
                                    <span pid="total" data-bind="text: totalLineSum"></span>
                                </dt>
                            </dl>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- curt summery-->
    <div data-bind="visible: cartLines().length > 0" id="summarySection" style="display: none;">
        <div class="col-md-12">
            @* MKL: We have two "Totals" so this will be removed until taxes and payment info added.
                <h3>Shopping Cart Total</h3>
            *@
        </div>
        <div class="col-md-12 total">
            <span class="text">TOTAL:</span>
            <span class="amount" data-bind="text: totalSum" />
        </div>
    </div>
</div>

