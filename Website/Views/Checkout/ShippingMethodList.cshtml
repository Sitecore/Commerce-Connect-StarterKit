@using Sitecore.Commerce.StarterKit.Models
@model IEnumerable<ShippingMethodModel>


@foreach (var shippingMethod in Model)
{
  string radioId = Guid.NewGuid().ToString("N");
  <div class="row">
    <div class="col-md-3">
      <input type="radio" @(shippingMethod.Selected ? "checked=checked" : string.Empty) name="shippingMethod" id="@radioId" value="@(shippingMethod.SystemName + "|" + shippingMethod.Name)" />
      <label for="@radioId">@shippingMethod.Name</label>
    </div>
  </div>
}