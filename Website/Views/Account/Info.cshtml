@using Sitecore.Commerce.StarterKit
@using Sitecore.Commerce.StarterKit.Models

@model UserInfoModel

<h1>User Profile</h1>

<div class="row">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>@Texts.OrderId</th>
      <th>@Texts.Date</th>
      <th>@Texts.Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.Orders)
    {
      <tr>
        <td class="col-md-2">@order.OrderID</td>
        <td class="col-md-6">@order.OrderDate</td>
        <td class="col-md-2">@order.Status</td>
      </tr>
    }
    </tbody>
  </table>
  <br/>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-6 chk-prev"><a class="btn btn-info" href="/Products">@Texts.BackToShopping</a></div>
    </div>
  </div>
</div>
