@using Sitecore.Globalization
@using Sitecore.Commerce.StarterKit

@model Sitecore.Commerce.StarterKit.Models.CategoryFacetModel

<div id="CategoryNavigation" class="category-nav-container">
    <h5>@Translate.Text(Texts.Categories)</h5>
    <div>
        <ul class="category-nav">
            @foreach (var category in Model.Categories)
            {
                <li class="category-nav-item @(category.ExternalID == Model.CurrentSubCategory ? "selected" : string.Empty)">
                    <a href="/products?category=@(Model.CurrentCategory)&subCategory=@(category.ExternalID)">@category.Name</a>
                </li>
            }
        </ul>
    </div>
</div>