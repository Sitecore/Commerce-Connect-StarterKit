@using Sitecore.Commerce.StarterKit
@model Sitecore.Commerce.StarterKit.Models.ProductListHeaderModel

<div id="C04-ProductListHeader" class="row">
    <div class="col-md-12">
        <div class="row">
            
            <div class="col-md-4 col-sm-4 col-xs-6">
                <div class="Sort-By-container">
                    <span>@Texts.SortBy</span>
                    <select class="form-control sortDropdown">
                        @foreach (var sortingItem in Model.SortingItems)
                        {
                            bool isCurrentSorting = 
                                string.Equals(Model.Sorting.Field,sortingItem.Field,StringComparison.OrdinalIgnoreCase) &&
                                string.Equals(Model.Sorting.Direction,sortingItem.Direction,StringComparison.OrdinalIgnoreCase);
                            
                            <option selected="@isCurrentSorting" value="@(sortingItem.Field):@(sortingItem.Direction)">@sortingItem.DisplayName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 hidden-xs">
                <div class="showing-amount">
                    <h6>@Texts.Showing @Model.ShowingFrom - @Model.ShowingTo</h6>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-6">
                <div class="results-container">
                    <span>@Texts.ResultsPerPage</span>
                    <select class="form-control changePageSize">
                        @foreach (int pageSize in Model.PageSizes)
                        {
                            <option selected="@(Model.Paging.PageSize == pageSize)" value="@pageSize">@pageSize</option>
                        }
                    </select>
                </div>
            </div>

        </div>
    </div>
</div>